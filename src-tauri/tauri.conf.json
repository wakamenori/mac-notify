{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mac-notify",
  "version": "0.1.0",
  "identifier": "com.wakamenori.mac-notify",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "mac-notify",
        "width": 520,
        "height": 640,
        "resizable": false,
        "alwaysOnTop": true,
        "transparent": false,
        "visible": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": ["icons/icon.icns"]
  }
}
